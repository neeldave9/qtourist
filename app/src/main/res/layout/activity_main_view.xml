<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mainview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

    <TextView
            android:id="@+id/current_user_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/change_password_button" android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"/>
    <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_alignParentEnd="true" android:layout_marginTop="50dp"
            android:layout_below="@+id/change_password_button" android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"/>
    <Button
            android:id="@+id/change_password_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="375dp"
            android:layout_below="@+id/current_user_textview" android:layout_toEndOf="@+id/newPassword_textview"
            android:layout_marginStart="40dp" android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"/>
    <Button
            android:id="@+id/change_email_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:layout_marginTop="64dp"
            android:layout_below="@+id/username_view" android:layout_toEndOf="@+id/user_email_textview"
            android:layout_marginStart="40dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="90dp"
            android:layout_height="91dp"
            android:clickable="true"
            android:contentDescription="Map screen"
            android:id="@+id/mapViewButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:cropToPadding="false"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            app:useCompatPadding="false"
            app:rippleColor="@color/white"
            android:background="#000000" android:src="?attr/homeAsUpIndicator" app:backgroundTint="#56FE30"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:ems="10"
            android:id="@+id/newPassword_textview" android:layout_marginTop="375dp"
            android:layout_below="@+id/current_user_textview"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:selectAllOnFocus="false" android:singleLine="true"
            android:textAlignment="center" android:hint="enter new password" android:layout_marginLeft="20dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="79dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            android:layout_marginTop="20dp" android:layout_below="@+id/current_user_textview"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_email_textview"
            android:layout_marginTop="71dp" android:layout_below="@+id/username_view" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="0"
            android:id="@+id/username_view" android:layout_marginTop="0dp"
            android:layout_below="@+id/imageView"
            android:textAlignment="center" style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
            android:textSize="16sp" android:textStyle="bold"/>

</RelativeLayout>
