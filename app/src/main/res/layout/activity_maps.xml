<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:layout="@layout/support_simple_spinner_dropdown_item"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:contentDescription="Profile"
            android:id="@+id/mainViewButton"
            android:layout_alignParentEnd="false"
            android:cropToPadding="false"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            app:useCompatPadding="false"
            app:backgroundTint="#56FE30"
            app:rippleColor="@color/white"
            android:background="#FBFBFB" android:src="@android:drawable/ic_menu_edit"
            android:layout_alignParentLeft="true" android:layout_marginStart="20dp"/>
    <Button
            android:text="Check-in"
            android:layout_width="120dp"
            android:layout_height="50dp" android:id="@+id/checkInButton" android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp" android:layout_alignParentEnd="true" android:layout_marginEnd="146dp"/>

</RelativeLayout>